<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="eu.udig.tutorials.alertapp.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="eu.udig.tutorials.alertapp.Perspective"
            fixed="false"
            id="X.perspective"
            name="Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="eu.udig.tutorials.alertapp.View"
            id="X.view"
            name="View">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="X.view"
               minimized="false"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               standalone="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="net.refractions.udig.project.ui.tool">
      <modalTool
            categoryId="eu.udig.tutorials.alert-app.alerts"
            class="eu.udig.tutorials.alertapp.SendAlertTool"
            icon="icons/etool16/info_mode.gif"
            id="eu.udig.tutorials.alert-app.sendalerttool"
            name="Send Alert"
            onToolbar="true"
            toolCursorId="eu.udig.tutorials.alert-app.toolCursor1">
      </modalTool>
      <toolCursor
            hotspotX="5"
            hotspotY="5"
            id="eu.udig.tutorials.alert-app.toolCursor1"
            image="icons/pointer/info_source.png">
      </toolCursor>
      <category
            id="eu.udig.tutorials.alert-app.alerts"
            name="Alerts">
      </category>
   </extension>
   <extension
         point="net.refractions.udig.project.ui.toolManagers">
      <toolManager
            class="eu.udig.tutorials.alertapp.CustomToolManager"
            id="eu.udig.tutorials.alert-app.customToolManager">
      </toolManager>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="eu.udig.tutorials.alert-app.application"
            name="Alert App">
         <property
               name="appName"
               value="Alert App">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="startupProgressRect"
               value="5,275,445,15">
         </property>
      </product>
   </extension>
   <extension
         point="net.refractions.udig.mapgraphic.mapgraphic">
      <mapGraphic
            class="eu.udig.tutorials.alertapp.ShowAlertsMapGraphic"
            id="eu.udig.tutorials.alert-app.showalertmapgraphic">
      </mapGraphic>
   </extension>

</plugin>
